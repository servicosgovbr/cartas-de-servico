                <default>
                    <canal-de-prestacao tipo="presencial">
                        <descricao>Teste: vide endereços dos locais de atendimento no site http://portal.mte.gov.br/postos/</descricao>
                    </canal-de-prestacao>
                </default>
            </canais-de-prestacao>
        </etapa>
